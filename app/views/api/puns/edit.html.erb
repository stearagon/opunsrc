<h1>Edit Pun</h1>

<form class="pun-form" action="<%= api_pun_url %>" method="post">
  <input type="hidden" name="_method" value="put">
  <%= form_auth %>
  <label for="pun-term">Term</label>
  <input type="text" id="pun-term" name="pun[term]" value="<%= @pun.term %>">

  <label for="pun-pun">Pun</label>
  <input type="text" id="pun-pun" name="pun[pun]" value="<%= @pun.pun %>">

  <label for="pun-example">Example</label>
  <textarea id="pun-example" name="pun[example]" rows="8" cols="40"> <%= @pun.example %>
  </textarea>

  <label for="pun-tags">Tags</label>
  <textarea id="pun-tags" name="pun[tags]" rows="8" cols="40"><% @pun.topics.each do |topic| %><%= " #" + topic.title %><% end %></textarea>

  <button>Finish Edit</button>
  <%= link_to "Return to Index", api_puns_url %>
</form>
