<h1><%= @pun.term %></h1>
<p>Avg. Rating: <%= @pun.average_rating == -1 ? "n/a" : @pun.average_rating %></p>
<p>Your Rating: <%= current_user.ratings.find_by_pun_id(@pun).nil? ? "n/a" : current_user.ratings.find_by_pun_id(@pun).star_symbols %></p>
<h1><%= @pun.pun %></h1>
<h1><%= @pun.example %></h1>
<h1>Tags</h1>
<div>
  <% @pun.topics.each do |topic| %>
    <a><%= link_to topic.title, api_topic_url(topic) %></a> &nbsp;
  <% end %>
</div>

<form class="delete-pun" action="<%= api_pun_url %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <%= form_auth %>
  <button>Delete Pun</button>
</form>

<%= link_to "Edit Pun", edit_api_pun_url %>
<%= link_to "Puns Index", api_puns_url %>
<%= link_to "Topics Index", api_topics_url %>
